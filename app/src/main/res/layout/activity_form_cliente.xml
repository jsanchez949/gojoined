<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FormCliente"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/nom_usuario"
                android:id="@+id/textView4"
                android:textColor="?attr/colorPrimary"
                android:layout_marginTop="10sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="10sp"
                android:id="@+id/e_nombre"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textApellidos"
                android:layout_marginTop="10sp"
                android:textColor="?attr/colorPrimary"
                android:text="@string/txtApellidos" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/e_apellidos"
                android:layout_marginTop="10sp"
                android:ems="10"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView19"
                android:text="@string/txtEmpresa"
                android:layout_marginTop="10sp"
                android:textColor="?attr/colorPrimary"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/e_empresa"
                android:layout_marginTop="10sp"
                android:ems="10"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/telefono_usuario"
                android:id="@+id/textView6"
                android:layout_marginTop="10sp"
                android:textColor="?attr/colorPrimary"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/e_telefono"
                android:layout_marginTop="10sp"
                android:ems="10"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/txtDireccion"
                android:id="@+id/textView5"
                android:layout_marginTop="10sp"
                android:textColor="?attr/colorPrimary" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/e_direccion"
                android:layout_marginTop="10sp"
                android:ems="10" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/txtCp"
                android:id="@+id/textView10"
                android:layout_marginTop="10sp"
                android:textColor="?attr/colorPrimary"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/e_cp"
                android:layout_marginTop="10sp"
                android:ems="10" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/txtCiudad"
                android:id="@+id/textView17"
                android:layout_marginTop="10sp"
                android:textColor="?attr/colorPrimary" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/e_ciudad"
                android:layout_marginTop="10sp"
                android:ems="10"/>

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtIDCliente"
            android:layout_weight="1"
            android:paddingLeft="10sp"
            android:visibility="gone" />

        <TextView
            android:text="txtLongitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLongitud"
            android:layout_weight="1"
            android:paddingLeft="10sp"
            android:visibility="gone" />

        <TextView
            android:text="txtLatitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLatitud"
            android:layout_weight="1"
            android:paddingLeft="10sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:gravity="bottom|center_vertical|center_horizontal"
        android:layout_marginBottom="10dp">

        <Button
            android:layout_height="wrap_content"
            android:text="@string/btn_guardar"
            android:id="@+id/btn_guardar"
            android:textColor="?attr/colorPrimary"
            android:foregroundGravity="center_vertical|center_horizontal|center"
            android:layout_weight="1"
            android:layout_width="10sp" />

        <Button
            android:layout_height="wrap_content"
            android:text="@string/btn_cancelar"
            android:id="@+id/btn_cancelar"
            android:textColor="?attr/colorPrimary"
            android:foregroundGravity="center_vertical|center_horizontal|center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_width="10sp" />
    </LinearLayout>

</LinearLayout>

